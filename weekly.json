{
    "provider": "trello",
    "policies": [
        {
            "name": "archive-done-tasks",
            "resource": "board",
            "filters": [
                {
                    "name": "personal"
                }
            ],
            "children": [
                {
                    "resource": "list",
                    "filters": [
                        {
                            "name": "done"
                        }
                    ],
                    "children": [
                        {
                            "resource": "card",
                            "actions": [
                                {
                                    "type": "archive"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "create-weekly-tasks",
            "resource": "board",
            "filters": [
                {
                    "name": "personal"
                }
            ],
            "children": [
                {
                    "resource": "list",
                    "filters": [
                        {
                            "name": "this week"
                        }
                    ],
                    "actions": [
                        {
                            "type": "addcard",
                            "params": {
                                "name": "Visit someone in the ward",
                                "due": "Saturday@20:00",
                                "labels": "3,church,generated"
                            }
                        },
                        {
                            "type": "addcard",
                            "params": {
                                "name": "Make sure speaking assignments have been made and spreadsheet is updated",
                                "due": "Saturday@20:00",
                                "labels": "2,church,generated"
                            }
                        },
                        {
                            "type": "addcard",
                            "params": {
                                "name": "Plan a date night for the week",
                                "due": "Sunday@20:00",
                                "labels": "2,anytime,generated"
                            }
                        },
                        {
                            "type": "addcard",
                            "params": {
                                "name": "Approve and send the newsletter for the week",
                                "due": "Tuesday@13:00",
                                "labels": "1,anytime,generated"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "find-tasks-for-this-week",
            "resource": "board",
            "filters": [
                {
                    "name": "personal"
                }
            ],
            "children": [
                {
                    "resource": "list",
                    "filters": [
                        {
                            "name": "backlog"
                        }
                    ],
                    "children": [
                        {
                            "resource": "card",
                            "filters": [
                                {
                                    "dueBefore": "today+7"
                                }
                            ],
                            "actions": [
                                {
                                    "type": "move",
                                    "params": {
                                        "board": "personal",
                                        "list": "this week"
                                    }
                                }
                            ]
                        }
                    ]
                    
                }
            ] 
        }
    ]
}
