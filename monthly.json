{
    "provider": "trello",
    "policies": [
        {
            "name": "create-monthly-tasks",
            "resource": "board",
            "filters": [
                {
                    "name": "personal"
                }
            ],
            "children": [
                {
                    "resource": "list",
                    "filters": [
