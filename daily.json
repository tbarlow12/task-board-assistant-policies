{
    "provider": "trello",
    "policies": [
        {
            "name": "archive-done-tasks",
            "resource": "board",
            "filters": [
                {
                    "name": "personal"
                }
            ],
            "children": [
                {
                    "resource": "list",
                    "filters": [
                        {
                            "name": "done"
                        }
                    ],
                    "children": [
                        {
                            "resource": "card",
                            "actions": [
                                {"type": "archive"}
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "find-tasks-for-today",
            "resource": "board",
            "filters": [
                {
                    "name": "personal"
                }
            ],
            "children": [
                {
                    "resource": "card",
                    "filters": [
                        {
                            "dueBefore": "today+1"
                        }
                    ],
                    "actions": [
                        {
                            "type": "move",
                            "params": {
                                "board": "personal",
                                "list": "today"
                            }
                        }
                    ]
                }
            ] 
        }
    ]
}
