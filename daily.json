{
    "provider": "trello",
    "policies": [
        {
            "name": "archive-done-tasks",
            "resource": "board",
            "filters": [
                {
                    "name": "personal"
                }
            ],
            "children": [
                {
                    "resource": "list",
                    "filters": [
                        {
                            "name": "done"
                        }
                    ],
                    "children": [
                        {
                            "resource": "card",
                            "actions": [
                                {"type": "archive"}
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "create-daily-tasks",
            "resource": "board",
            "filters": [
                {
                    "name": "personal"
                }
            ],
            "children": [
                {
                    "resource": "list",
                    "filters": [
                        {
                            "name": "today"
                        }
                    ],
                    "actions": [
                        {
                            "type": "addcard",
                            "params": {
                                "name": "Gospel Study",
                                "due": "Today@7:00",
                                "labels": "1,church,generated"
                            }
                        },
                        {
                            "type": "addcard",
                            "params": {
                                "name": "Work Out",
                                "due": "Today@5:00",
                                "labels": "2,generated"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "find-tasks-for-today",
            "resource": "board",
            "filters": [
                {
                    "name": "personal"
                }
            ],
            "children": [
                {
                    "resource": "card",
                    "filters": [
                        {
                            "dueBefore": "today+1"
                        }
                    ],
                    "actions": [
                        {
                            "type": "move",
                            "params": {
                                "board": "personal",
                                "list": "today"
                            }
                        }
                    ]
                }
            ] 
        }
    ]
}